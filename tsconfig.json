{
  "compilerOptions": {
    "target": "ES2020", 
    "useDefineForClassFields": true,
    "allowJs": true,
    "module": "ESNext",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler", // Mudado de node para bundler
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": false, // Mudado para false se você quer gerar .js
    "outDir": "./dist", // Adicione onde os arquivos JS serão gerados

    /* Linting */
    "strict": false, // Recomendo true para aproveitar TypeScript
    "noUnusedParameters": false,
    "noFallthroughCasesInSwitch": true,
    
    /* Adicionais recomendados */
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*"], // Mais específico
  "exclude": ["node_modules", "dist"]
}